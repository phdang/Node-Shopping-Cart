<!doctype html>
<html lang="en">
    <head>
          <%- include('../partials/head') %>
    </head>
    <body>
      <%- include('../partials/header') %>
      <div class="container">
        <div class="row">

          <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">

            <h3>Sign Up</h3>


            <form action="" method="post">

              <div class="form-group">

                <label for="name">Name</label>

                <input class="form-control" type="text" name="name" placeholder="Your name" value="">

              </div>

              <div class="form-group">

                <label for="email">Email</label>

                <input class="form-control" type="email" name="email" placeholder="Email" value="">

              </div>

              <div class="form-group">

                <label for="email">Password</label>

                <input class="form-control" type="password" name="password" placeholder="Password">

              </div>

              <button type="submit" class="form-control btn btn-primary">Register</button>

              <%= csrfToken %>

            </form>

          </div>

        </div>
      </div>
      <%- include('../partials/scripts') %>
    </body>
</html>

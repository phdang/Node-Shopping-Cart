<!doctype html>
<html lang="en">
    <head>
          <%- include('../partials/head') %>
    </head>
    <body>
      <%- include('../partials/header') %>
      <div class="container">
        <div class="row">

          <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">

            <h3>Sign Up</h3>

            <form action="/signup" method="post">

              <div class="form-group">

                <label for="name">Name</label>

                <input class="form-control" type="text" name="name" autofocus placeholder="Your name" value="">

              </div>

              <div class="form-group">

                <label for="email">Email</label>

                <input class="form-control" type="email" name="email" required placeholder="Email" value="">

              </div>

              <div class="form-group">

                <label for="password">Password</label>

                <input class="form-control" type="password" name="password" required placeholder="Password">

              </div>

              <div class="form-group">

                <label for="confirmPassword">Confirm Password</label>

                <input class="form-control" type="password" name="confirmPassword" required placeholder="Confirm">

              </div>

              <input type="hidden" name="_csrf" value="<%= csrfToken %>">

              <button type="submit" class="form-control btn btn-primary">Register</button>

            </form>

          </div>

        </div>
      </div>
      <%- include('../partials/scripts') %>
    </body>
</html>
